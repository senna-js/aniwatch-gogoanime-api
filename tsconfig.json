{
  "compilerOptions": {
  "target": "es2016",
  "lib": [
  "es6",
  "dom"
  ],
  "module": "commonjs",
  "rootDir": "./",
  "resolveJsonModule": true,
  "allowJs": true,
  "outDir": "build",
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "noImplicitAny": true,
  "skipLibCheck": true,
  "noEmit": false,
  "declaration": true,
  "isolatedModules": false,
  "moduleDetection": "force",
  "verbatimModuleSyntax": false,
  "noUnusedLocals": false,
  "noUnusedParameters": false
  },
  "include": ["src", "api"]
  }
